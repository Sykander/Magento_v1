<layout version="0.1.0">
  <!-- Referencing the controller action here specifies what pages this block should be activated on -->
    <tutorial_index_index>
      <block type="page/html" name="root" output="toHtml" template="magentotutorial/helloworld/simple_page.phtml">
        <block type="customer/form_register" name="customer_form_register" template="customer/form/register.phtml"/>
      </block>
    </tutorial_index_index>
    <!-- Make the tutorial index controller point its test page at the index page -->
    <tutorial_index_test>
        <!-- handle here means to load in the files from the handle address -->
        <update handle="tutorial_index_index" />
    </tutorial_index_test>
</layout>
